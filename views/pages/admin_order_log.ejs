<!--log commandes page-->
<!DOCTYPE html>
<html lang="fr">
<%- include('../partials/head') %>

<body>
<%- include('../partials/navbar') %>


<div class="backg"></div>

<div class="center">
    <div class="title">Historique des commandes:</div>
    <!-- Liste des commandes-->
    <table class=tableau>
        <tr>
            <th>Numéro de commande</th>
            <th>Nom complet du client</th>
            <th>Adresse e-mail du client</th>
            <th>Date sortie</th>
            <th>Date retour</th>
            <th>Date vraie sortie</th>
            <th>Date vrai retour</th>
            <th>Commentaire Admin</th>
        </tr>
        <!--db à rechecker, commentaire char max needs to be fixed-->
        <% for(var i=0; i < count; i++) { %>
        <tr>
            <td><%= commandes[i].CommandeID %></td>
            <td><%= commandes[i].nom_complet %></td>
            <td><%= commandes[i].adresse_mail %></td>
            <td><%= commandes[i].date_sortie %></td>
            <td><%= commandes[i].date_retour %></td>
            <td><%= commandes[i].date_vraie_sortie %></td>
            <td><%= commandes[i].date_vrai_retour %></td>
            <td><%= commandes[i].commentaire_admin %></td>
        </tr>
        <% } %>

    </table>
</div>

<script src="/js/dark_mode.js"></script>

</body>
</html>   











